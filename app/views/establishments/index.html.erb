<p id="notice"><%= notice %></p>

<h1>Establishments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @establishments.each do |establishment| %>
      <tr>
        <td><%= establishment.name %></td>
        <% if can?(:show, establishment) %><td><%= link_to 'Show', establishment %></td><% end %>
        <% if can?(:edit, establishment) %><td><%= link_to 'Edit', edit_establishment_path(establishment) %></td><% end %>
        <% if can?(:destroy, establishment) %><td><%= link_to 'Destroy', establishment, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can?(:new, Establishment) %><%= link_to 'New Establishment', new_establishment_path %><% end %>
